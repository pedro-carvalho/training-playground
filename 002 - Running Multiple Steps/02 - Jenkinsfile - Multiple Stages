pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
		stage('build') {
            steps {
            	saveAndPrintDate("output")
            }
        }
		stage('test') {
            steps {
            	sh "grep 2019 output"
            }
        }
    }
}

def saveAndPrintDate(filename = '') {
	sh "date > $filename && cat $filename"
}