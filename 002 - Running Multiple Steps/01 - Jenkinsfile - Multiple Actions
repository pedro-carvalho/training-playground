def saveAndPrintDate(filename = '') {​​
	sh "date > $filename && cat $filename"
}​​

pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
		stage('Print') {
            steps {
                saveAndPrintDate("Output1")
				sh 'sleep 10s'
				saveAndPrintDate("Output2")
            }
        }
    }
}